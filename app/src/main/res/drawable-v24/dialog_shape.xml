<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">

        <shape>
            <gradient
                android:startColor="@color/colorWhite2"
                android:endColor="@color/colorWhite2"
                android:angle="270"/>

            android:shape="rectangle">

            <stroke
                android:width="4dp"
                android:color="@color/colorTurquoise3" />


            <padding
                android:bottom="1dp" android:left="2dp" android:right="2dp" android:top="1dp" />


            <corners
                android:radius="10dp"/>

        </shape>
    </item>
</selector>