<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape">

    <TextView
        android:id="@+id/congratulations_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/winner_str1"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/kid"
        android:paddingHorizontal="5dp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/new_record_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/winner_str2"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingHorizontal="5dp"
        android:fontFamily="@font/kid"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/new_record"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/name_et"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/editext_hint"
        android:fontFamily="@font/kid"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        >

        <Button
            android:id="@+id/save_score_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/save_score"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/main_button_shape2"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:fontFamily="@font/kapow"
            />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/cancel_btn"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/main_button_shape2"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:fontFamily="@font/kapow"
            />

    </LinearLayout>


</LinearLayout>