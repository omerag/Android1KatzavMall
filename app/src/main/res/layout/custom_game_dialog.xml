<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_shape">

    <TextView
        android:id="@+id/custom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/custom_list_str"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/kid"
        android:paddingHorizontal="5dp"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/select_groceries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_game"
        android:textSize="25sp"
        android:textStyle="bold"
        android:paddingHorizontal="5dp"
        android:fontFamily="@font/kid"
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        >

        <Button
            android:id="@+id/select_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/select"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/main_button_shape1"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:fontFamily="@font/kapow"
            />

        <Button
            android:id="@+id/quantity_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="@string/quantity"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/main_button_shape1"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:fontFamily="@font/kapow"
            />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            >

        <Button
            android:id="@+id/play_btn"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/main_button_shape2"
            android:fontFamily="@font/kapow"
            android:paddingHorizontal="10dp"
            android:text="@string/play"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>